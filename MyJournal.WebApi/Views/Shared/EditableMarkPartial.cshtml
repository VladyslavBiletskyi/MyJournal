@model IList<MyJournal.WebApi.Models.Mark.LessonMarkModel>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="form-row">
        <div>
            @Html.HiddenFor(x => x[i].StudentId)
        </div>
        <div>
            @Html.HiddenFor(x => x[i].LessonId)
        </div>
        <div class="col-2">
            @Html.DisplayFor(x => x[i].StudentName)
        </div>
        <div class="col-2">
            <input asp-for="@Model[i].Mark" class="form-control"/>
        </div>
        <div class="col-2">
            <input asp-for="@Model[i].NotPresent" class="form-control"/>
        </div>
    </div>
}