@using MyJournal.WebApi.Controllers
@model MyJournal.WebApi.Models.Message.MessageModel
@inject UserController UserController

@{
    ViewData["Title"] = "Новий лист";
}
<h4>Новий лист</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="NewMessage" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">До кого</label>
                <select asp-for="AddresseeId" class="form-control custom-select">
                    @foreach (var user in UserController.GetAllUsers())
                    {
                    <option value="@user.Id">@user.Name</option>
                    }
                </select>
                <span asp-validation-for="AddresseeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Текст листа</label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Надіслати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>