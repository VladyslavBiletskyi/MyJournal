@model MyJournal.WebApi.Models.Group.CreateGroupModel

@{
    ViewData["Title"] = "Додати клас";
}

<h1>Додати клас</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Рік навчання</label>
                <input asp-for="Year" min="1" max="11" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Буква</label>
                <input asp-for="Letter" class="form-control" />
                <span asp-validation-for="Letter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>