@model MyJournal.WebApi.Models.Group.AssignTeacherModel

@{
    ViewData["Title"] = "Задати класного керівника";
}

<h1>Задати класного керівника</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignTeacher">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Викладач</label>
                @Html.PartialAsync("TeacherSelectionPartial").Result
            </div>
            <div class="form-group">
                <label class="control-label">Клас</label>
                @Html.PartialAsync("GroupSelectionPartial").Result
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>