@model IEnumerable<MyJournal.WebApi.Models.Subject.SubjectModel>
@{
    ViewData["Title"] = "Експорт";
}

<h1>Експорт оцінок з предмету</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Export">
            <div class="form-group">
                <label class="control-label">Предмет</label>
                <select id="SubjectId" name="SubjectId" class="form-control">
                    @foreach (var subject in Model)
                    {
                        <option value="@subject.SubjectId">@subject.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Експорт" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Lesson">Назад</a>
</div>