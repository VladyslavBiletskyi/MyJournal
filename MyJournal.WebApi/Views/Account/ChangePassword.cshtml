@model MyJournal.WebApi.Models.Account.ChangePasswordModel

@{
    ViewData["Title"] = "Смена пароля";
}

    <h1>Смена пароля</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Старый пароль</label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Новый пароль</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Подтверждение пароля</label>
                <input asp-for="NewPasswordConfirmation" class="form-control" />
                <span asp-validation-for="NewPasswordConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сменить пароль" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

