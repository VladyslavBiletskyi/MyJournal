@model MyJournal.WebApi.Models.Account.RegisterModel

@{
    ViewData["Title"] = "Реєстрація";
}
    <h1>Реєстрація нового користувача</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Логін</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Прізвище</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Им'я</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">По батькові</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Клас</label>
                @Html.PartialAsync("GroupSelectionPartial").Result
            </div>
            <div class="form-group">
                <label class="control-label">Це учитель</label>
                <input asp-for="IsTeacher"/>
                <span asp-validation-for="IsTeacher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Реєстрація" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller = "Home" asp-action="Index">На головну</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
